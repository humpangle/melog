{
  "version": "2.0.0",
  "presentation": {
    "reveal": "always",
    "panel": "new"
  },
  "tasks": [
    {
      "label": "mix compile win",
      "type": "shell",
      "command": "dev.bat && mix compile",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "mix get compile win",
      "type": "shell",
      "command": "dev.bat && mix do deps.get, compile",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "mix get compile deb",
      "type": "shell",
      "command": "mix do deps.get, compile",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning"
      ],
      "group": "build"
    },
    {
      "label": "mix test unit win",
      "type": "shell",
      "command": "dev.bat && mix test",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "mix test unit deb",
      "type": "shell",
